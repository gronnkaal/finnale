extends layout

block content
  .container
    h1 Register
    br
    if (message.length > 0)
      .alert.alert-danger= message
    form(role='form', action="/signup",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="email", placeholder='Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-warning(type='submit') Login