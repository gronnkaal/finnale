extends layout

block content
	
	.container
		if (!user)
			.row
				.col-8
					p You are not logged in
				.col-4
					a(href="/login") Login
		if (user)
			.row
				.col-md-12
					h1 Welcome
			.row
				.col-md-2
					p Username:
				.col-md-2
					p  #{user.email}
				.col-md-4
			.row
				.col-md-2
					p IP address:
				.col-md-2
					p #[span#iceInfoIp]
				.col-md-8
			.row
				.col-md-2
					p Bandwidth:
				.col-md-2
					p #[span#iceBwUsage] / #[span#iceBwLimit] MB
				.col-md-8
			.row
				.col-md-2
				.col-md-2
					.progress
						.progress-bar.progress-bar-success(role="progressbar", aria-valuenow="50", aria-valuemin="0", aria-valuemax="100", style="width:50%")
				.col-md-8
			.row
				.col-md-12
					a(href="/logout") Logout