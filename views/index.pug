extends layout

block content
	
	.container
		if (!user)
			.row
				.col-8
					p You are not logged in
				.col-4
					a(href="/login") Login
		if (user)
			.row
				.col-md-12
					h2 Dashboard
			.row
				.col-md-2
					p Username:
				.col-md-2
					p  #{user.email}
				.col-md-4
			.row
				.col-md-2
					p IP address:
				.col-md-2
					p #[span#iceInfoIp]
				.col-md-8
			.row
				.col-md-2
					p Bandwidth:
				.col-md-2
					.progress
						.progress-bar.progress-bar-success(role="progressbar", id="iceUsageProgress", aria-valuenow="0", aria-valuemin="0", aria-valuemax="100", style="width:0%") #[span#iceUsageInfo]
					.progress
						.progress-bar.progress-bar-success(role="progressbar", id="iceExtraProgress", aria-valuenow="0", aria-valuemin="0", aria-valuemax="100", style="width:0%") #[span#iceExtraInfo]
				.col-md-8
			.row
				.col-md-2
					p Bandwidth Limit:
				.col-md-2
					p #[span#iceBwLimit] MB
				.col-md-8
			.row
				.col-md-2
					p Bandwidth Usage:
				.col-md-2
					p #[span#iceBwUsage] MB
				.col-md-8
			.row
				.col-md-2
					p Bandwidth Extra:
				.col-md-2
					p #[span#iceBwExtra] MB
				.col-md-8
			.row
				.col-md-12
					a(href="/logout") Logout